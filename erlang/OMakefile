# Phony targets are scoped, so you probably want to declare them first.
#
.PHONY: ct all clean doc

ct: $(beams) $(apps)
	mkdir -p test/log
	erl -sname ct -s ct_run script_start -s erlang halt \
	  -dir $(ROOT)/test -logdir $(ROOT)/test/log \
	  -I $(ROOT)/include -I $(ROOT)/src -cover $(ROOT)/test/my.coverspec  -pa $(ROOT)/ebin

doc: $(erls) $(SRCDIR)/overview.edoc
	erl -noshell -pa ebin -eval \
	  'ok=edoc:application(msgpack_rpc, filename:absname("src"), [{dir,"edoc"}]).' \
	  -s init stop
	eprintln(building edoc done. see edoc/index.html)

.DEFAULT:  $(beams) $(apps)
	$(ERL) -pa $(EBIN) -noshell -eval 'eunit:test("ebin", []).' -s init stop

clean:
    rm -rf $(beams)

.SUBDIRS: src test
